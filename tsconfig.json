{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "@charts/*": ["./typings/charts/*"],
      "@common/*": ["./typings/common/*"],
      "@helpers/*": ["./typings/helpers/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
